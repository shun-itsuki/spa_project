
<% if user_signed_in? %>

  <% unless article.like_user(current_user.id).blank? %>

    <%= link_to users_article_likes_path(article_id: article.id , id: article.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
        <i class="material-icons red-text">favorite</i>
        <span class="red-text" >
          <%= article.likes_count %>
        </span>
      </div>
    <% end %>

  <% else %>

    <%= link_to users_article_likes_path(article.id), method: :post, remote: true do %>
      <div class="vertical_like">
        <i class="material-icons grey-text text-darken-2">favorite_border</i>
        <span class="grey-text text-darken-2" >
          <%= article.likes_count %>
        </span>
      </div>
    <% end %>
  <% end %>

<% else %>

  <% if article.likes_count > 0 %>
    <div class="vertical_like">
      <i class="material-icons red-text">favorite</i>
      <span class="red-text">
        <%= article.likes_count %>
      </span>
    </div>
  <% else %>
    <div class="vertical_like">
      <i class="material-icons grey-text text-darken-2">favorite_border</i>
      <span class="grey-text text-darken-2">
        <%= article.likes_count %>
      </span>
    </div>
  <% end %>

<% end %>
