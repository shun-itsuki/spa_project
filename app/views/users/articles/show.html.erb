<div style="text-align:center;"><h2>記事詳細ページ</h2></div>
<div class="row justify-content-md-center">

  <div class="col-md-4">
    <%= attachment_image_tag @article, :article_image, :fill,400,400, format:"jpeg", class:"", fallback:"no_image.jpeg", :size => "300x300" %>
  </div>

  <div class="col-md-4">
    <table class="table">
      <tr>
        <th>温泉名&nbsp;:</th><td><%= @article.spa_name %></td>
      </tr>
      <tr>
        <th>アドレス&nbsp;:</th><td><%= @article.spa_address %></td>
      </tr>
    </table>
    <div id="map" style='width: 100%; height: 300px;'></div>
      <script type="text/javascript">
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          handler.getMap().setZoom(17);
        });
      </script>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="">
    感想：<%= @article.impression %>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-auto">
    書き手：<%= @article.user.name %>&nbsp;
    日付：<%= @article.date %>&nbsp;
    評価：<%= @article.value %>
  </div>
</div>

<% if @article.user.id == current_user.id %>
  <div class="row justify-content-end">
    <div class="">
      <%= link_to "編集する", edit_users_article_path, class: "btn btn-primary btn-lg rounded-pill btn-block" %>
      <%= link_to "削除する", users_article_path(@article.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-primary btn-lg rounded-pill btn-block" %>
    </div>
  </div>
<% end %>
