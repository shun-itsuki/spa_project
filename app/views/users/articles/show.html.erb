<h2 class="title">記事詳細ページ</h2>
<div class="row">
  <div class="col-5 offset-1">
    <%= attachment_image_tag @article, :article_image, :fill,580,500, format:"jpeg", class:"", fallback:"no_image.jpeg", :size => "580x500" %>
  </div>
  <div class="col-5">
    <table class="table">
      <tr>
        <th>温泉名：</th><td><%= @article.spa_name %></td>
      </tr>
      <tr>
        <th>アドレス：</th><td><%= @article.spa_address %></td>
      </tr>
    </table>
    <div id="map" style='width: 100%; height: 385px;'></div>
      <script type="text/javascript">
        handler = Gmaps.build('Google');
        console.log(<%= raw @hash.to_json %>)
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          handler.getMap().setZoom(17);
        });
      </script>
  </div>
  <div class="col-8 offset-2">
    <p class="border">感想：<%= @article.impression %></p>
  </div>
  <div class="col-6 offset-2">
    <p class="border">書き手：<%= @article.user.name %>&nbsp;日付：<%= @article.date %>&nbsp;</p>
  </div>
  <div class="col-1">
    <div class="col-2" id="likes_buttons_<%= @article.id %>">
     <%= render partial: 'users/likes/like', locals: { article: @article,} %>
    </div>
  </div>
  <div class="col-8 offset-2">
    <h4>コメント</h4>
    <% if user_signed_in? %>
      <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
      <%= render partial: "users/comments/form", locals: {comment: @comment, article: @article} %>
    <% end %>
    <div id="comments_area" style="margin-top: 20px">
      <!-- 投稿されたコメント一覧をブログの詳細ページに表示するためのrender -->
      <%= render partial: "users/comments/index", locals: {comments: @comments} %>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <% if @article.user_id == current_user.id %>
    <div class="row justify-content-end">
      <div class="">
        <%= link_to "編集する", edit_users_article_path, class: "btn btn-primary btn-lg rounded-pill btn-block" %>
        <%= link_to "削除する", users_article_path(@article.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-primary btn-lg rounded-pill btn-block" %>
      </div>
    </div>
  <% end %>
<% end %>
